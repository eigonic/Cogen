<?xml version="1.0" encoding="UTF-8"?>
<page controller="com.bay.da.web.controller.GroupsSearchController" master="/pages/master.jspx">
	<contentHolder id="mainholder">
		<form class="well form-horizontal" action="/pages/groupsSearch.da">
			<ajaxpanel>
                <fieldset>
                    <div class="row">
                        <div class="span6">
                            <div class="control-group">
                                <label for="idWC" class="control-label">${msg.ID}</label>
                                <div class="controls">
                                    <input type="text" id="idWC"/>
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group">
                                <label for="nameWC" class="control-label">${msg.NAME}</label>
                                <div class="controls">
                                    <input type="text" id="nameWC"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-action">
                        <input type="button" onserverclick="doSearch" value="${msg.SEARCH_CAPTION}" class=" btn-primary"/>
                        <hr/>
                    </div>
                    <datatable datasource="${sql.data_source}" var="groups_item" casesensitive="true" table="groups" showrowindex="true" autobind="true" noresults="${msg.NO_RESULTS}" sql="${sql.groupsSEARCH}">
                        <dataparam control="idWC" expression="${sql.groups_ID}"/>
                        <dataparam control="nameWC" expression="${sql.groups_NAME}"/>
                        <datapk name="ID"/>
                        <datacolumn fieldname="ID" type="numeric" text="${msg.ID}" id="ID"/>
                        <datacolumn fieldname="NAME" type="string" text="${msg.NAME}" id="NAME"/>
                        <datacolumn>
                            <itemtemplate>
                                <a href="/pages/groupsView.da?id=${groups_item.id}" class="btn btn-large">
                                    <i class="icon-list-alt icon-black"/>${msg.DETAILS}</a>
                            </itemtemplate>
                        </datacolumn>
                        <datacolumncommand type="edit"/>
                        <datacolumncommand confirm="${msg.CONFIRM_DELETE}" type="delete"/>
                    </datatable>
                </fieldset>
            </ajaxpanel>
		</form>
	</contentHolder>
</page>
